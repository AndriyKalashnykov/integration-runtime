<?xml version="1.0" encoding="UTF-8"?>
<blueprint
    xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <camelContext xmlns="http://camel.apache.org/schema/blueprint" 
    				xmlns:ki="http://schemas.ladok.se/kataloginformation"
    				xmlns:atom="http://www.w3.org/2005/Atom">
        <route>
            <from uri="activemq:queue:ladok3-event-distribution" />
<!-- 	            <transform><simple>Processing from Ladok: ${header.ladokEventNumber}</simple></transform> -->
            <multicast stopOnException="true">
            	<pipeline>
            		<filter>
            			<xpath logNamespaces="true">/atom:entry/atom:content/ki:UtlandskOrtHandelse</xpath>
 	            		<to uri="activemq:queue:ladok3event-testsystem" />
            		</filter>
            	</pipeline>
            	<pipeline>
 	            	<to uri="activemq:queue:ladok3event-logdb" />
 	            </pipeline>
            </multicast>
        </route>
    </camelContext>

</blueprint>
